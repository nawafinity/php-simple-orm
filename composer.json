{
    "name": "nawafinity/php-simple-orm",
    "description": "A very simple ORM library built on PHP 8.1.",
    "keywords": [
        "nawafinity",
        "php-simple-orm"
    ],
    "homepage": "https://github.com/nawafinity/php-simple-orm",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Nawaf Khalifah",
            "email": "nawafinity@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Nawafinity\\PhpSimpleOrm\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nawafinity\\PhpSimpleOrm\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
